{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true, // Report errors on unused locals
    "noUnusedParameters": true, // Report errors on unused parameters
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@/*": ["app/*"],
      "@assets/*": ["assets/*"],
    }
  },
  "include": ["app/**/*", "test/**/*", "detox/**/*", "types/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
  ]
}
